{% extends'@Caradvisor/Admin/index.html.twig' %}

{% set role = {"ROLE_PART":"Particulier", "ROLE_PRO":"Professionnel"} %}

{% block body %}
    <section id="admin_users">
        <div class="col-xs-10">
            <div class="col-xs-10 col-xs-offset-1">
                <h1 class="text-center">
                    <a href="{{ path('dashboard') }}" class="pull-left">
                        <i class="icon-back fa fa-chevron-left fa-1x" aria-hidden="true"></i>
                    </a>
                    Utilisateurs
                </h1>
                <hr class="text-center">
            </div>
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Nom d'utilisateur</th>
                            <th>Type</th>
                            <th>Détails</th>
                            <th>Etat</th>
                            <th>Désactiver</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.firstName }}</td>
                                <td>{{ user.userName }}</td>
                                <td>{{ role[user.roles|first] }}</td>
                                <td>
                                    <a href="{{ path('detail_user', {'user': user.id}) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                                </td>
                                {% if user.isActive == true %}
                                    <td><i class="fa fa-unlock fa-2x" aria-hidden="true"></i></td>
                                    <td><a href="{{ path('desactivate_user', {'user': user.id}) }}">
                                            <button type="button">Désactiver</button>
                                        </a></td>
                                {% else %}
                                    <td><i class="fa fa-lock fa-2x" aria-hidden="true"></i></td>
                                    <td><a href="{{ path('activate_user', {'user': user.id}) }}">
                                            <button type="button">Activer</button>
                                        </a></td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 text-center">
                    <nav aria-label="Page navigation">
                        <ul class="pager">
                            {% if pagination.page > 1 %}
                                <li>
                                    <a href="{{ path(pagination.route, pagination.route_params|merge({'page': 1})) }}">Première
                                        page</a>
                                </li>
                                <li>
                                    <a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page-1})) }}">Précédente</a>
                                </li>
                            {% endif %}
                            {% for p in range(max(pagination.page - 4, 1), min(pagination.page+4, pagination.pages_count)) %}
                                <li>
                                    <a{% if p == pagination.page %} class="current-page" {% endif %}
                                            href="{{ path(pagination.route, pagination.route_params|merge({'page': p})) }}">{{ p }}</a>
                                </li>
                            {% endfor %}
                            {% if pagination.page < pagination.pages_count %}
                                <li>
                                    <a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page+1})) }}">Suivante</a>
                                </li>
                                <li>
                                    <a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.pages_count})) }}">Dernière
                                        page</a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>
{% endblock %}