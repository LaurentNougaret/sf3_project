{% extends '@Caradvisor/Admin/index.html.twig' %}
{% block body %}
    <div class="col-xs-10">
        <div class="col-xs-10 col-xs-offset-1 col-xs-offset-2">
            <h1 class="text-center">
                <a href="{{ path('admin_users') }}" class="pull-left">
                    <i class="icon-back fa fa-chevron-left fa-1x" aria-hidden="true"></i>
                </a>
                {{ user.userName }}
            </h1>
            <hr class="text-center">
        </div>
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="panel panel-default">

                    <div class="panel-heading text-center">
                        {% if user.picture is null %}
                            <img src="{{ asset('img/user_avatar.png') }}" style="width:100px;" />
                        {%  else %}
                            <img src="{{ asset('upload/avatar/' ~ user.picture)}}" style="width:100px;" />
                        {% endif %}
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Nom : </strong><span class="pull-right">{{ user.lastName }}</span></li>
                        <li class="list-group-item"><strong>Prénom : </strong><span class="pull-right">{{ user.firstName }}</span></li>
                        <li class="list-group-item"><strong>Nom d'utilisateur : </strong><span class="pull-right">{{ user.userName }}</span></li>
                        <li class="list-group-item"><strong>Email : </strong><span class="pull-right">{{ user.email }}</span></li>
                        <li class="list-group-item"><strong>Genre : </strong><span class="pull-right">{{ user.gender }}</span></li>
                        <li class="list-group-item"><strong>Adresse: </strong><span class="pull-right">{{ userProfile.address }}</span></li>
                        <li class="list-group-item"><strong>Ville : </strong><span class="pull-right">{{ userProfile.city }}</span></li>
                        <li class="list-group-item"><strong>Code postal : </strong><span class="pull-right">{{ userProfile.postalCode }}</span></li>
                        <li class="list-group-item"><strong>Téléphone : </strong><span class="pull-right">{{ userProfile.phone }}</span></li>
                        <li class="list-group-item"><strong>Date de naissance : </strong><span class="pull-right">{{ userProfile.birthdate | date('d-m-y') }}</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
