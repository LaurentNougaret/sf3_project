{% extends "@Caradvisor/Admin/index.html.twig" %}
{% block body %}

    <!-- Only Admin will have access to this form. It allows adding other
    admins.
    After it's tested and done, please don't forget to update access control
    for it in security.yml, limiting the access to Role_Admin -->
<section id="admin">
    <div class="container">
        <div class="bloc">
            <div class="col-xs-4 col-xs-offset-4">
                <h2 class="text-center">Register Admin</h2>
                <hr>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword.first) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword.second) }}
                    </div>
                    <button type="submit">Register!</button>
                    {{ form_end(form) }}
                </div>
        </div>
    </div>
</section>

{% endblock %}