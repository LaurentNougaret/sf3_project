{% extends ('@Caradvisor/Admin/index.html.twig') %}
{% block body %}

<section id="adminEtabs">
    <div class="col-xs-10">
        <div class="col-xs-10 col-xs-offset-1">
            <h1 class="text-center">
                <a href="{{ path('dashboard') }}" class="pull-left">
                    <i class="icon-back fa fa-chevron-left fa-1x" aria-hidden="true"></i>
                </a>
                Établissements
            </h1>
            <hr class="text-center">
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>N° Siret</th>
                        <th>Ville</th>
                        <th>Détails</th>
                        <th>État</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for pros in pros %}
                        <tr>
                            <td>{{ pros.dealerName }}</td>
                            <td>{{ pros.dealerType }}</td>
                            <td>{{ pros.siret }}</td>
                            <td>{{ pros.city }}</td>
                            <td>
                                <a href="{{ path('detail_pro', {'pros': pros.id}) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                            </td>
                            {% if pros.isActive == true %}
                                <td><i class="fa fa-unlock fa-2x" aria-hidden="true"></i></td>
                                <td><a href="{{ path('desactivate_pro', {'pros': pros.id}) }}"><button type="button">Désactiver</button></a></td>
                            {% else %}
                                <td><i class="fa fa-lock fa-2x" aria-hidden="true"></i></td>
                                <td><a href="{{ path('activate_pro', {'pros': pros.id}) }}"><button type="button">Activer</button></a></td>
                            {% endif %}

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 text-center">
                <nav aria-label="Page navigation">
                    <ul class="pager">
                        {% if pagination.page > 1 %}
                            <li>
                                <a href="{{ path(pagination.route, pagination.route_params|merge({'page': 1})) }}">Première page</a>
                            </li>
                            <li>
                                <a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page-1})) }}">Précédente</a>
                            </li>
                        {% endif %}
                        {% for p in range(max(pagination.page - 4, 1), min(pagination.page+4, pagination.pages_count)) %}
                            <li>
                                <a{% if p == pagination.page %} class="current-page" {% endif %} href="{{ path(pagination.route, pagination.route_params|merge({'page': p})) }}">{{ p }}</a>
                            </li>
                        {% endfor %}
                        {% if pagination.page < pagination.pages_count %}
                            <li>
                                <a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page+1})) }}">Suivante</a>
                            </li>
                            <li>
                                <a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.pages_count})) }}">Dernière page</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

{% endblock %}