{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="forgottenPassword">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h2 class="text-center">Récupérez votre mot de passe</h2>
                    <hr class="password-review-underline">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                    <!-- Back to main page -->
                    <div class="row inline-block">
                        {{ message }}
                    </div>
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-0">
                            <a href="{{ path('home')}}">
                                <p><i class="fa fa-angle-double-left" aria-hidden="true"> </i>
                                    Revenir à la page d'accueil</p><br>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
                    {{ form(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
                    <div class="form-group">
                        <label for="passwordButton" class="visuallyhidden"></label>
                        <button type="submit" id="passwordButton" name="passwordButton" class="btn center-block">Envoyer</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
