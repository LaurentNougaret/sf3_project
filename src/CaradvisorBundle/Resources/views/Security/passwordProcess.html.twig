{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="forgottenPassword">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h2 class="text-center">Récupérez votre mot de passe</h2>
                    <hr class="password-review-underline">
                    <!-- Back to main page -->
                    <div class="row inline-block">
                        {% for flash_message in app.session.flashBag.get('notice-green') %}
                            <div class="alert alert-info">
                                {{ flash_message }}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-0">
                            <a href="{{ path('home')}}">
                                <p><i class="fa fa-angle-double-left" aria-hidden="true"> </i>
                                    Revenir à la page d'accueil</p><br>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
                    {{ form_row(form.email) }}
                    {{ form_widget(form._token) }}
                    {{ form_row(form.submit) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>

        </div>
    </section>
{% endblock %}
