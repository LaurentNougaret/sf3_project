{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="changePassword">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h2 class="text-center">Modifiez votre mot de passe</h2>
                    <hr class="password-review-underline">
                    <!-- Back to main page -->
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-1">
                            <a href="{{ path('user', {'user': app.user.id}) }}">
                                <p><i class="fa fa-angle-double-left" aria-hidden="true"> </i>
                                    Revenir Ã  Mon Compte</p><br>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
                        {{ form_row(form.oldPassword) }}
                        {{ form_row(form.plainPassword.first) }}
                        {{ form_row(form.plainPassword.second) }}
                        {{ form_widget(form._token) }}
                        {{ form_row(form.save) }}
                    </div>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </section>
{% endblock %}
