{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="pro">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="text-center">Mon profil</h2>
                    <hr class="pro-review-underline"><br>
                    <!-- Back to main page -->
                    <div class="row">
                        <div class="col-lg-5 col-sm-offset-2">
                            <a href="{{ path('pro', {'pro': pro.id}) }}">
                                <p><i class="fa fa-angle-double-left" aria-hidden="true"> </i>
                                Revenir à Mon Compte</p><br>
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xs-offset-0 col-sm-offset-0 col-md-offset-2 col-lg-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">{{ pro.dealerName }}</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3 col-lg-3 " align="center">
                                        <i class="fa fa-user fa-5x" aria-hidden="true"></i>
                                        <!-- <img src="" alt=""> -->
                                    </div>
                                    <div class="col-md-9 col-lg-9 ">
                                        <table class="table table-responsive" id="proProfile">
                                            <tbody>
                                            <tr>
                                                <td>Nom de la societé:</td>
                                                <td>{{ pro.dealerName }}</td>
                                            </tr>
                                            <tr>
                                                <td>SIRET:</td>
                                                <td>{{ pro.siret }}</td>
                                            </tr>
                                            <tr>
                                                <td>Type:</td>
                                                <td>{{ pro.dealerType }}</td>
                                            </tr>
                                            <tr>
                                            <tr>
                                                <td>Adresse:</td>
                                                <td>{{ pro.address }}</td>
                                            </tr>
                                            <tr>
                                                <td>Code postal:</td>
                                                <td>{{ pro.postalCode }}</td>
                                            </tr>
                                            <tr>
                                                <td>Ville:</td>
                                                <td>{{ pro.city }}</td>
                                            </tr>
                                            <tr>
                                                <td>Email:</td>
                                                <td><a href="mailto:#">{{ pro.email }}</a></td>
                                            </tr>
                                            <tr>
                                                <td>Téléphone:</td>
                                                <td>{{ pro.phone }}</td>
                                            </tr>
                                            <tr>
                                                <td>Description:</td>
                                                <td>{{ pro.description }}
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="{{ path('pro_edit', {'id': pro.id}) }}"
                           class="btn btn-default center-block btn-send">
                            Modifier profil</a>
                    </div>
                </div>
            </div>
    </section>
{% endblock %}
