{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="pro">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="text-center">Les avis</h2>
                    <hr class="pro-review-underline"><br>
                    <!-- Back to main page -->
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-2 col-md-6 col-md-offset-2">
                            <a href="{{ path('user_establishments', {'pro': pro.id, 'user': user.id}) }}">
                                <i class="icon-back fa fa-chevron-left fa-1x" aria-hidden="true"></i> </i>
                            </a>
                        </div>
                    </div>
            {% for review in data %}
                   <div class="row">
                        <div class="col-xs-8 col-xs-offset-2">
                            <div class="ListReviewsByPro">
                                <div class="reviews-content">
                                    <h4>Avis réparation</h4>
                                    <p class="review-card-title">
                                        {{ review.user.firstName ~ " " ~ review.user.lastName }}
                                        ( {{ review.user.userName }} )
                                    </p>
                                    <p>Date de l'avis: {{ review.dateReview|date('d-m-y') }}</p>
                                    <p>Titre: {#{{ review.review.subject }}#}</p>
                                </div>
                                <div class="SeeReviewStars">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                </div>
                        <!-- Review made by client -->
                        <div class="review-body">
                            <div class="card-review">
                                <p>{{ review.review }}</p>
                            </div>
                        </div>
                                {% if review.answer is null %}
                                <div class="review-see-buttons">
                                    <a href = "{{ path('answer_repair',
                                    {'pro': pro.id, 'user': user.id}) }}">
                                        <button type="submit" class="btn btn-primary center-block modify-pro-review">Répondre</button>
                                    </a>
                                </div>
                                {% else %}
                                    <div class ="reviews-content">
                                        <h4>La réponse</h4>
                                        <p>{{ review.answer.message }}</p>
                                        <small>{{ review.answer.date|date('d-m-y') }}</small>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                                {% endfor %}
                       {% for review in beta %}
                       <div class="row">
                           <div class="col-xs-8 col-xs-offset-2">
                               <div class="ListReviewsByPro">
                                   <div class="reviews-content">
                                       <h4>Avis Achat {{ review.reviewBuyType  }}</h4>
                                       <p class="review-card-title">
                                           {{ review.user.firstName ~ " " ~ review.user.lastName }}
                                           ( {{ review.user.userName }} )
                                       </p>
                                       <p>Date de l'avis: {{ review.dateReview|date('d-m-y') }}</p>
                                       <p>Titre: {{ review.subject }}</p>
                                   </div>
                                   <div class="SeeReviewStars">
                                       <i class="fa fa-star" aria-hidden="true"></i>
                                       <i class="fa fa-star" aria-hidden="true"></i>
                                       <i class="fa fa-star" aria-hidden="true"></i>
                                       <i class="fa fa-star" aria-hidden="true"></i>
                                       <i class="fa fa-star" aria-hidden="true"></i>
                                   </div>
                                   <!-- Review made by client -->
                                   <div class="review-body">
                                       <div class="card-review">
                                           <p>{{ review.review }}</p>
                                       </div>
                                   </div>
                                   {% if review.answer is null %}
                                       <div class="review-see-buttons">
                                           <a href = "{{ path('answer_buy',
                                           {'pro': pro.id, 'user': user.id}) }}">
                                               <button type="submit" class="btn btn-primary center-block modify-pro-review">Répondre</button>
                                           </a>
                                       </div>
                                   {% else %}
                                       <div class ="reviews-content">
                                           <h4>La réponse</h4>
                                           <p>{{ review.answer.message }}</p>
                                           <small>{{ review.answer.date|date('d-m-y') }}</small>
                                       </div>
                                   {% endif %}
                               </div>
                           </div>
                           {% endfor %}
                            </div>
                        </div>
                   </div>
                </div>
    </section>

{% endblock %}
