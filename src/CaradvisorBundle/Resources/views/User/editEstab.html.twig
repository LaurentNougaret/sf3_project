                <div class="col-xs-12">
                    {{ form_start(edit_form) }}
                    {{ form_errors(edit_form) }}
                    <h2 class="text-center">Modifier profil</h2>
                    <hr class="pro-review-underline"><br>
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xs-offset-0 col-sm-offset-0 col-md-offset-2 col-lg-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3 col-lg-3 " align="center">
                                        <i class="fa fa-user fa-5x" aria-hidden="true"></i>
                                        <!-- <img src="" alt=""> -->
                                    </div>
                                    <div class="col-md-9 col-lg-9 ">
                                        <table class="table table-responsive" id="proProfile">
                                            <tbody>
                                            <tr>
                                                <td>Nom de la societé:</td>
                                                <td>{{ form_row(edit_form.dealerName) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Type de la societé:</td>
                                                <td>{{ form_row(edit_form.dealertype) }}</td>
                                            </tr>
                                            <tr>
                                                <td>E-mail:</td>
                                                <td>{{ form_row(edit_form.email) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Addresse</td>
                                                <td>{{ form_row(edit_form.address) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Ville:</td>
                                                <td>{{ form_row(edit_form.city) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Code postal:</td>
                                                <td>{{ form_row(edit_form.postalCode) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Téléphone:</td>
                                                <td>{{ form_row(edit_form.phone) }}</td>
                                            </tr>
                                            <tr>
                                                <td>SIRET:</td>
                                                <td>{{ form_row(edit_form.siret) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Marque:</td>
                                                <td>{{ form_row(edit_form.brand) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Description:</td>
                                                <td>{{ form_row(edit_form.description) }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-xs-12 text-center update-photo">
                    <label class=" control-label" for="filebutton">Ajoutez une photo de votre établissement </label>
                    <div>
                        <input id="filebutton" name="filebutton" class="input-file center-block" type="file"
                               accept=".jpg, .png, .jpeg">
                        <br><span class="help-block">Formats de fichiers acceptés: JPG, JPEG, PNG.</span><br>
                    </div>
                </div>
                {{ form_row(edit_form.save) }}
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
