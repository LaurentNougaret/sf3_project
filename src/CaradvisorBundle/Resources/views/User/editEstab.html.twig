{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
<section class="pro">
    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 bloc">
                {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}
                <h2 class="text-center">Modifier profil</h2>
                <hr>
                <!-- Back to main page -->

                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        {{ form_row(edit_form.dealerName) }}
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        {{ form_row(edit_form.dealertype) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_row(edit_form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_row(edit_form.address) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        {{ form_row(edit_form.city) }}
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        {{ form_row(edit_form.postalCode) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        {{ form_row(edit_form.phone) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        {{ form_row(edit_form.siret) }}
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        {{ form_row(edit_form.brand) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        {{ form_row(edit_form.description) }}
                    </div>
                </div>
                <div class="form-group col-xs-12 text-center update-photo">
                    <label class=" control-label" for="filebutton">Ajoutez une photo de votre établissement </label>
                    <div>
                        <input id="filebutton" name="filebutton" class="input-file center-block" type="file"
                               accept=".jpg, .png, .jpeg">
                        <br><span class="help-block">Formats de fichiers acceptés: JPG, JPEG, PNG.</span><br>
                    </div>
                </div>
                {{ form_row(edit_form.save) }}
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
