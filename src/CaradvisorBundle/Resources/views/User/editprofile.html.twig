{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="pro">
        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 bloc forms">
                {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}
                <h2 class="text-center">Modifier profil</h2>
                <hr>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            {{ form_label(edit_form.userType) }}
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            {{ form_widget(edit_form.userType) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_row(edit_form.username) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(edit_form.firstname) }}
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(edit_form.lastname) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(edit_form.birthdate) }}
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(edit_form.gender) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            {{ form_row(edit_form.email) }}
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-6">
                            {{ form_row(edit_form.phone) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_row(edit_form.address) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(edit_form.city) }}
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(edit_form.postalCode) }}
                        </div>
                    </div>
                    <!-- <div class="form-group col-xs-12 text-center update-photo">
                        <label class=" control-label" for="filebutton">Vous pouvez ajouter un avatar ou photo si vous voulez </label>
                        <div>
                            <input id="filebutton" name="filebutton" class="input-file center-block" type="file"
                                   accept=".jpg, .png, .jpeg">
                            <br><span class="help-block">Formats de fichiers accept√©s: JPG, JPEG, PNG.</span><br>
                        </div>
                    </div> -->
                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn-lg btn-block save-pro-btn">Modifier</button>
                        </div>
                    </div>
                    {{ form_row(edit_form._token) }}
                    {{ form_end(edit_form)}}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
