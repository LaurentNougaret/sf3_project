{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="pro">
        <div class="container">
            <div class="row">
                <div class="col-md-12 bla">
                    <h2 class="text-center">
                        <a href="{{ path('user') }}">
                            <i class="icon-back fa fa-chevron-left" aria-hidden="true"></i>
                        </a>
                        Les avis
                    </h2>
                </div>
            </div>
            <hr class="pro-review-underline"><br>
                    {% for review in data %}
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="ListReviewsByPro">
                        <div class="review-establishment-header">
                            <div class="reviews-content">
                                <h4 class="review-card-title">Avis réparation</h4>
                                <p>
                                <i>{{ review.user.firstName ~ " " ~ review.user.lastName }}</i>, {{ review.user.city }}
                                </p>
                                <small>Posté le {{ review.dateReview|date('d-m-y') }}</small>
                                <h5><i class="fa fa-quote-left" aria-hidden="true"></i>  {{ review.subject }} <i class="fa fa-quote-right" aria-hidden="true"></i>
                                </h5>
                            </div>
                            <div class="SeeReviewStars">
                                <h4>{{ review.ratingGlobal }}</h4>
                            </div>
                        </div>
                                <!-- Review made by client -->
                        <div class="review-body">
                            <div class="card-review">
                                <p class="review-establishment">{{ review.review }}</p>
                            </div>
                        </div>
                        {% if review.answer is null %}
                        <div class=" reviews-content review-establishment-response">
                            <h4>Pas de réponse</h4>
                        </div>
                        {% else %}
                        <div class ="reviews-content">
                            <h4 class="review-establishment-response">La réponse</h4>
                            <p>{{ review.answer.message }}</p>
                            <small>{{ review.answer.date|date('d-m-y') }}</small>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
                        {% endfor %}
                        {% for review in beta %}
