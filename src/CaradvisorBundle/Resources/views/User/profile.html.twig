{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="pro">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="text-center">Mon profil</h2>
                    <hr class="pro-review-underline"><br>
                    <!-- Back to main page -->
                    <div class="row">
                        <div class="col-lg-5 col-sm-offset-2">
                            <a href="{{ path('user', {'user': user.id}) }}">
                                <p><i class="fa fa-angle-double-left" aria-hidden="true"> </i>
                                    Revenir à Mon Compte</p><br>
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xs-offset-0 col-sm-offset-0 col-md-offset-2 col-lg-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">{{ user.firstName ~ " " ~ user.lastName }}</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3 col-lg-3 " align="center">
                                        <i class="fa fa-user fa-5x" aria-hidden="true"></i>
                                        <!-- <img src="" alt=""> -->
                                    </div>
                                    <div class="col-md-9 col-lg-9 ">
                                        <table class="table table-responsive" id="proProfile">
                                            <tbody>
                                            <tr>
                                                <td>Prénom:</td>
                                                <td>{{ user.firstName }}</td>
                                            </tr>
                                            <tr>
                                                <td>Nom:</td>
                                                <td>{{ user.lastName }}</td>
                                            </tr>
                                            <tr>
                                                <td>Nom d'utilisateur:</td>
                                                <td>{{ user.userName }}</td>
                                            </tr>
                                            {#<tr>
                                                <td>Date de Naissance:</td>
                                                <td>{{ user.userProfile.birthDate }}
                                                </td>
                                            </tr>#}
                                            <tr>
                                                <td>Genre:</td>
                                                <td>{{ user.gender}}</td>
                                            </tr>
                                            <tr>
                                                <td>Adresse:</td>
                                                <td>{{ user.userProfile.address }}</td>
                                            </tr>
                                            <tr>
                                                <td>Code postal:</td>
                                                <td>{{ user.userProfile.postalCode }}</td>
                                            </tr>
                                            <tr>
                                                <td>Ville:</td>
                                                <td>{{ user.userProfile.city }}</td>
                                            </tr>
                                            <tr>
                                                <td>Email:</td>
                                                <td>{{ user.email }}</td>
                                            </tr>
                                            <tr>
                                                <td>Numero de Téléphone:</td>
                                                <td>{{ user.userProfile.phone }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="{{ path('user_profile', {'user': user.id}) }}"
                           class="btn btn-default center-block btn-send">
                            Modifier profil</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
