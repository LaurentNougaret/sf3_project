{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    <section class="pro">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}
                <h2 class="text-center">Modifier profil</h2>
                    <hr class="pro-review-underline"><br>
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xs-offset-0 col-sm-offset-0 col-md-offset-2 col-lg-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3 col-lg-3 " align="center">
                                        <i class="fa fa-user fa-5x" aria-hidden="true"></i>
                                        <!-- <img src="" alt=""> -->
                                    </div>
                                    <div class="col-md-9 col-lg-9 ">
                                        <table class="table table-responsive" id="proProfile">
                                            <tbody>
                                            <tr>
                                                <td>Prénom:</td>
                                                <td>{{ form_row(edit_form.firstname) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Nom:</td>
                                                <td>{{ form_row(edit_form.lastname) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Nom d'utilisateur:</td>
                                                <td>{{ form_row(edit_form.username) }}</td>
                                            </tr>
                                            {#<tr>
                                                <td>Date de Naissance:</td>
                                                <td>{{ form_row(edit_form.birthdate) }}</td>
                                            </tr>#}
                                            <tr>
                                                <td>Genre:</td>
                                                <td>{{ form_row(edit_form.gender) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Adresse:</td>
                                                <td>{{ form_row(edit_form.address) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Code postal:</td>
                                                <td>{{ form_row(edit_form.postalCode) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Ville:</td>
                                                <td>{{ form_row(edit_form.city) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Email:</td>
                                                <td>{{ form_row(edit_form.email) }}</td>
                                            </tr>
                                            <tr>
                                                <td>Numero de Téléphone:</td>
                                                <td>{{ form_row(edit_form.phone) }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <a href="{{ path('user_profile', {'user': app.user.id}) }}">
                                <button class="btn-lg btn-block save-pro-btn">Modifier</button>
                            </a>
                        </div>
                    </div>
                    {{ form_row(edit_form._token) }}
                    {{ form_end(edit_form, {'render_rest': false})}}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
