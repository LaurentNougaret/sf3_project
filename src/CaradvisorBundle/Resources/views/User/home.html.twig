{% extends ('@Caradvisor/index.html.twig') %}
{% block body %}
    {% include ('@Caradvisor/Elements/flashbag.html.twig') %}
    <section class="pro">
        <div class="container">
            <div class="row" id="account-pro-reviews">
                <div class="col-xs-10 col-xs-offset-1">
                    <h2 class="welcomePro">Bienvenue, {{ app.user.firstName }}</h2>
                    <h3 class="text-center">Mon Compte</h3>
                    <hr class="pro-review-underline"><br>
                    <div class="color">
                        <div class="row">
                            <div class="col-xs-8 col-xs-offset-2 col-lg-3 col-lg-offset-3">
                                <a href="{{ path('user_profile') }}">
                                    <div class="panel myaccountProAccessProfile">
                                        <div class="panel-heading">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <i class="fa fa-address-card-o fa-5x" aria-hidden="true"></i>
                                                </div>
                                                <div class="col-xs-12">
                                                    <p class="announcement-text">Accéder à mon profil</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <div class="col-xs-8 col-xs-offset-2 col-lg-3 col-lg-offset-0">
                                <a href="{{ path('user_settings') }}">
                                    <div class="panel myaccountProSettings">
                                        <div class="panel-heading">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <i class="fa fa-cog fa-5x" aria-hidden="true"></i>
                                                </div>
                                                <div class="col-xs-12">
                                                    <p class="announcement-heading"></p>
                                                    <p class="announcement-text">Régler paramètres</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            {% if is_granted('ROLE_PART') %}
                                <div class="col-xs-8 col-xs-offset-2 col-lg-3 col-lg-offset-3">
                                    <a href="{{ path('user_vehicle') }}">
                                        <div class="panel myaccountUserAccessCompanyPage">
                                            <div class="panel-heading">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <i class="fa fa-car fa-5x" aria-hidden="true"></i>
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <p class="announcement-heading"></p>
                                                        <p class="announcement-text">Mes véhicules</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-xs-8 col-xs-offset-2 col-lg-3 col-lg-offset-0">
                                    <a href="{{ path('user_reviews') }}">
                                        <div class="panel myaccountUserSettings">
                                            <div class="panel-heading">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <i class="fa fa-comments fa-5x" aria-hidden="true"></i>
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <p class="announcement-heading"></p>
                                                        <p class="announcement-text">Accéder à mes avis</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>

                            {% elseif is_granted('ROLE_PRO') %}
                                <div class="col-xs-8 col-xs-offset-2 col-lg-3 col-lg-offset-3">
                                    <a href="{{ path('user_establishments') }}">
                                        <div class="panel myaccountProAccessCompanyPage">
                                            <div class="panel-heading">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <i class="fa fa-home fa-5x" aria-hidden="true"></i>
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <p class="announcement-heading"></p>
                                                        <p class="announcement-text">Mes établissements</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {% endif %}
                        </div>



                        </div>
                        <!-- Accès Premium -->
                        <!--<div class="row">
                                <div class="col-xs-8 col-xs-offset-2 col-lg-3 col-lg-offset-4 premiumblock">
                                    <a href="#">
                                        <div class="panel myaccountProAccessProfile">
                                            <div class="panel-heading">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <i class="fa fa-diamond fa-5x" aria-hidden="true"></i>
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <p class="announcement-heading"></p>
                                                        <p class="announcement-text">Premium</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div> -->
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}
